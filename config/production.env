# BHIV HR Platform - Production Environment Configuration

# API Gateway Configuration
GATEWAY_URL=https://bhiv-hr-gateway.onrender.com
API_KEY_SECRET=myverysecureapikey123

# AI Agent Configuration
AGENT_URL=https://bhiv-hr-agent.onrender.com

# Database Configuration (Render will override with actual values)
DATABASE_URL=postgresql://bhiv_user:bhiv_pass@localhost:5432/bhiv_hr

# Portal Configuration
HR_PORTAL_URL=https://bhiv-hr-portal.onrender.com
CLIENT_PORTAL_URL=https://bhiv-hr-client-portal.onrender.com

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8080

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_2FA=true
ENABLE_ADVANCED_MATCHING=true
ENABLE_BATCH_UPLOAD=true