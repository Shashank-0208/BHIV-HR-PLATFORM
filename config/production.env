# BHIV HR Platform - Production Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://bhiv_user:<DB_PASSWORD>@db:5432/bhiv_hr
DB_PASSWORD=<SECURE_DB_PASSWORD>
POSTGRES_PASSWORD=<SECURE_DB_PASSWORD>
POSTGRES_USER=bhiv_user
POSTGRES_DB=bhiv_hr

# API Security
API_KEY_SECRET=<SECURE_API_KEY>
CLIENT_ACCESS_CODE=<SECURE_CLIENT_CODE>

# Service URLs
GATEWAY_URL=http://gateway:8000
AGENT_URL=http://agent:9000
PORTAL_URL=http://portal:8501
CLIENT_PORTAL_URL=http://client_portal:8502

# CORS Configuration
CORS_ORIGINS=http://localhost:8501,http://localhost:8502,http://localhost:3000

# Feature Flags
ENABLE_SEMANTIC=false
ENABLE_AUTO_SYNC=true
ENABLE_VALUES_ASSESSMENT=true

# Performance Settings
MAX_CANDIDATES_PER_REQUEST=50
AI_MATCHING_TIMEOUT=15
DATABASE_POOL_SIZE=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10