# BHIV HR Platform - Environment Configuration Template
# Version: 3.1.0 with Phase 3 Features
# Updated: October 13, 2025
# Status: Production Ready
#
# Copy this file to .env and update values for your deployment
# Production Status: 5/5 services operational on Render
# Database Schema: v4.1.0 with Phase 3 learning engine

# Database Configuration
DATABASE_URL=postgresql://bhiv_user:your_password@db:5432/bhiv_hr
DB_PASSWORD=your_secure_password
POSTGRES_PASSWORD=your_secure_password
POSTGRES_USER=bhiv_user
POSTGRES_DB=bhiv_hr

# API Security
API_KEY_SECRET=your_secure_api_key_here
JWT_SECRET_KEY=your_jwt_secret_here
CANDIDATE_JWT_SECRET_KEY=your_candidate_jwt_secret_here
GATEWAY_SECRET_KEY=your_gateway_secret_key_here
CLIENT_ACCESS_CODE=your_client_access_code
DEFAULT_CLIENT_PASSWORD=your_default_client_password

# Service URLs (Local Docker)
GATEWAY_SERVICE_URL=http://gateway:8000
AGENT_SERVICE_URL=http://agent:9000
LANGGRAPH_SERVICE_URL=http://langgraph:9001
PORTAL_SERVICE_URL=http://portal:8501
CLIENT_PORTAL_SERVICE_URL=http://client_portal:8502
CANDIDATE_PORTAL_SERVICE_URL=http://candidate_portal:8503

# Production URLs (Reference)
# GATEWAY_SERVICE_URL=https://bhiv-hr-gateway-ltg0.onrender.com
# AGENT_SERVICE_URL=https://bhiv-hr-agent-nhgg.onrender.com
# LANGGRAPH_SERVICE_URL=https://bhiv-hr-langgraph.onrender.com
# PORTAL_SERVICE_URL=https://bhiv-hr-portal-u670.onrender.com
# CLIENT_PORTAL_SERVICE_URL=https://bhiv-hr-client-portal-3iod.onrender.com
# CANDIDATE_PORTAL_SERVICE_URL=https://bhiv-hr-candidate-portal-abe6.onrender.com

# CORS Configuration
CORS_ORIGINS=http://localhost:8501,http://localhost:8502,http://localhost:3000

# Feature Flags (Phase 3)
ENABLE_SEMANTIC=true
ENABLE_AUTO_SYNC=true
ENABLE_VALUES_ASSESSMENT=true
ENABLE_LEARNING_ENGINE=true
ENABLE_CULTURAL_FIT=true
ENABLE_BATCH_PROCESSING=true

# Performance Settings
MAX_CANDIDATES_PER_REQUEST=50
AI_MATCHING_TIMEOUT=15
DATABASE_POOL_SIZE=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Environment Configuration
ENVIRONMENT=development

# LangGraph Communication Services (Template)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN_SECRET_KEY=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=your_whatsapp_number
GMAIL_EMAIL=your_gmail_email
GMAIL_APP_PASSWORD_SECRET_KEY=your_gmail_app_password
TELEGRAM_BOT_TOKEN_SECRET_KEY=your_telegram_bot_token
TELEGRAM_BOT_USERNAME=your_telegram_bot_username
OPENAI_API_SECRET_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview