# BHIV HR Platform - Local Development Environment Template
# Copy this file to .env and update values for your local setup

# Environment Configuration
ENVIRONMENT=local
DEBUG=true

# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://bhiv_user:bhiv_pass@localhost:5432/bhiv_hr
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=bhiv_hr
DATABASE_USER=bhiv_user
DATABASE_PASSWORD=bhiv_pass
DATABASE_POOL_SIZE=10
DATABASE_POOL_TIMEOUT=30

# Service URLs (Docker Compose Internal)
GATEWAY_SERVICE_URL=http://gateway:8000
AGENT_SERVICE_URL=http://agent:9000
PORTAL_SERVICE_URL=http://portal:8501
CLIENT_PORTAL_SERVICE_URL=http://client_portal:8502

# External URLs (Local Access)
GATEWAY_PUBLIC_URL=http://localhost:8000
AGENT_PUBLIC_URL=http://localhost:9000
PORTAL_PUBLIC_URL=http://localhost:8501
CLIENT_PORTAL_PUBLIC_URL=http://localhost:8502

# Security Configuration (Development Keys - NOT for production)
API_KEY_SECRET=dev_api_key_local_12345678901234567890
JWT_SECRET_KEY=dev_jwt_secret_local_09876543210987654321
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# Rate Limiting (Relaxed for Development)
RATE_LIMIT_DEFAULT=1000
RATE_LIMIT_PREMIUM=5000
RATE_LIMIT_WINDOW_MINUTES=1
RATE_LIMIT_BURST_MULTIPLIER=5

# Performance Settings (Development Optimized)
MAX_CANDIDATES_PER_REQUEST=100
AI_MATCHING_TIMEOUT_SECONDS=30
HTTP_TIMEOUT_SECONDS=15
CONNECTION_POOL_SIZE=5

# Feature Flags (Development)
ENABLE_2FA=true
ENABLE_RATE_LIMITING=false
ENABLE_MONITORING=true
ENABLE_CACHING=false
ENABLE_DEBUG_MODE=true

# Monitoring & Logging (Verbose for Development)
LOG_LEVEL=DEBUG
LOG_FORMAT=json
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_PORT=9090

# CORS Configuration (Permissive for Development)
CORS_ORIGINS=http://localhost:8501,http://localhost:8502,http://localhost:3000,http://localhost:3001

# Client Authentication (Development)
DEFAULT_CLIENT_PASSWORD=demo123
CLIENT_ACCESS_CODE=dev_access_123

# Docker Configuration
GATEWAY_PORT=8000
AGENT_PORT=9000
PORTAL_PORT=8501
CLIENT_PORTAL_PORT=8502
DATABASE_PORT=5432