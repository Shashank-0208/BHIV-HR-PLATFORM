# BHIV HR Platform - Production Environment Template
# This file contains NO SECRETS - all secrets are managed via Render environment variables

# Environment Configuration
ENVIRONMENT=production
DEBUG=false

# Database Configuration (Render PostgreSQL - URL from environment)
DATABASE_URL=${DATABASE_URL}
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=3600

# Service URLs (Production Render Services)
GATEWAY_SERVICE_URL=bhiv-hr-gateway-46pz.onrender.com
AGENT_SERVICE_URL=bhiv-hr-agent-m1me.onrender.com
PORTAL_SERVICE_URL=bhiv-hr-portal-cead.onrender.com
CLIENT_PORTAL_SERVICE_URL=bhiv-hr-client-portal-5g33.onrender.com

# External URLs (Production Access)
GATEWAY_PUBLIC_URL=bhiv-hr-gateway-46pz.onrender.com
AGENT_PUBLIC_URL=bhiv-hr-agent-m1me.onrender.com
PORTAL_PUBLIC_URL=bhiv-hr-portal-cead.onrender.com
CLIENT_PORTAL_PUBLIC_URL=bhiv-hr-client-portal-5g33.onrender.com

# Security Configuration (Secrets from Render Environment Variables)
API_KEY_SECRET=${API_KEY_SECRET}
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# Rate Limiting (Production Optimized)
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_PREMIUM=300
RATE_LIMIT_WINDOW_MINUTES=1
RATE_LIMIT_BURST_MULTIPLIER=2

# Performance Settings (Production Optimized)
MAX_CANDIDATES_PER_REQUEST=50
AI_MATCHING_TIMEOUT_SECONDS=15
HTTP_TIMEOUT_SECONDS=10
CONNECTION_POOL_SIZE=20

# Feature Flags (Production)
ENABLE_2FA=true
ENABLE_RATE_LIMITING=true
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_DEBUG_MODE=false

# Monitoring & Logging (Production)
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_PORT=9090

# CORS Configuration (Production Restricted)
CORS_ORIGINS=bhiv-hr-portal-cead.onrender.com,bhiv-hr-client-portal-5g33.onrender.com

# Client Authentication (Production)
DEFAULT_CLIENT_PASSWORD=${DEFAULT_CLIENT_PASSWORD}
CLIENT_ACCESS_CODE=${CLIENT_ACCESS_CODE}

# Render Configuration
PORT=${PORT}
RENDER_SERVICE_NAME=${RENDER_SERVICE_NAME}
RENDER_EXTERNAL_URL=${RENDER_EXTERNAL_URL}

# Security Headers (Production)
SECURITY_HEADERS_ENABLED=true
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
HSTS_MAX_AGE=31536000