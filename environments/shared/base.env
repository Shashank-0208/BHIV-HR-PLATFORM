# BHIV HR Platform - Shared Base Configuration
# Common configuration variables used across all environments

# Application Information
APP_NAME=BHIV HR Platform
APP_VERSION=3.1.0
APP_DESCRIPTION=Enterprise HR Platform with AI-Powered Recruiting

# Database Configuration (Common Settings)
DATABASE_POOL_PRE_PING=true
DATABASE_ECHO=false
DATABASE_AUTOCOMMIT=false
DATABASE_AUTOFLUSH=false

# JWT Configuration (Common Settings)
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# Security Configuration (Common Settings)
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting (Base Settings)
RATE_LIMIT_WINDOW_MINUTES=1
RATE_LIMIT_BURST_MULTIPLIER=2
RATE_LIMIT_STORAGE_TYPE=memory

# Performance Settings (Base Settings)
HTTP_TIMEOUT_SECONDS=10
CONNECTION_TIMEOUT_SECONDS=5
READ_TIMEOUT_SECONDS=30

# Feature Flags (Base Settings)
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_HEALTH_CHECKS=true

# Monitoring & Logging (Base Settings)
LOG_FORMAT=json
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_PORT=9090

# AI Configuration (Common Settings)
AI_MATCHING_ALGORITHM_VERSION=2.0.0
AI_SCORING_MIN=0
AI_SCORING_MAX=100
AI_VALUES_ALIGNMENT_MAX=5.0

# Business Logic (Common Settings)
MAX_UPLOAD_SIZE_MB=10
SUPPORTED_FILE_TYPES=pdf,docx,txt
VALUES_ASSESSMENT_SCALE=5
INTERVIEW_STATUS_OPTIONS=scheduled,completed,cancelled,rescheduled

# Cache Configuration (Base Settings)
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=3600

# Email Configuration (Base Settings - if implemented)
EMAIL_ENABLED=false
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=true

# Pagination (Base Settings)
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Storage (Base Settings)
UPLOAD_FOLDER=uploads
RESUME_FOLDER=resumes
TEMP_FOLDER=temp